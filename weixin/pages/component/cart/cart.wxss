@import '../../common/common.wxss';

.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 150rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 65rpx;
    width: 40rpx;
    height: 40rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 90rpx;
    width: 150rpx;
    height: 150rpx;
}
.cart-list .cart-pro-name{
    line-height: 50rpx;
    width: 100%;
}
.cart-list .cart-pro-price{
    line-height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.cart-list .cart-count-box{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 200rpx;
    height: 50rpx;
    display: flex;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 50rpx;
    text-align: center;   
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 60rpx;
    height: 100%;
    background-color: #008B8B;
    color: #fff;
    border-radius: 6rpx;
    border: 1px solid #fff;
}
.cart-count-num{
    width: 120rpx;
    height: 100%;
    border-radius: 6rpx;
    border-top: 1px solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
}
.cart-del{
    position: absolute;
    right: 5rpx;
    top: 5rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #008B8B;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 18rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 30rpx;
    top: 25rpx;
    width: 50rpx;
    height: 50rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 50rpx;
  height: 50rpx;
}
.cart-toatl-price{
    float: right;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  background: #fff;
}
.cart-empty {
  text-align: center;
  margin-top: 264rpx;
}
.cart-kong {
  width: 200rpx;
  height: 200rpx;
}

.carts-goods-info {
  width: 40%;
  font-size: 12px;
}

.carts-goods-select {
  width: 30%;
}