@import '../../common/common.wxss';

.orders-address {
  position: relative;
  padding: 20rpx 50rpx 20rpx 35rpx;
  font-size: 12px;
  line-height: 25px;
  color: #adadad;
}

.orders-address-name {
  display: inline-block;
  width: 300rpx;
  color: #7f7f7f;
  font-weight: 900;
}

.orders-address-phone {
  color: #7f7f7f;
  font-weight: 900;
}

.limit {
  border-bottom: 20rpx solid #ededed;
}

.orders-box {
  font-size: 12px;
}

.orders-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 220rpx;
  height: 120rpx;
  border-bottom: 1rpx solid #ededed;
}

.orders-thumb {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.orders-list view {
  line-height: 60rpx;
}

.orders-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  border-top: 1rpx solid #ededed;
}

.orders-footer .orders-footer-total {
  display: inline-block;
  width: 510rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #a55350;
}

.orders-footer .orders-footer-btn {
  display: inline-block;
  width: 240rpx;
  text-align: center;
  color: #fff;
  background: #008B8B;
}

.wuliu-btn {
    display: inline-block;
    width: 240rpx;
    text-align: center;
    color: #fff;
    background: #008B8B;
}

.score{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx #e6e6e6 solid;
}
.score-view{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.score-left{
  width: 23%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  justify-content: space-between;
  padding-left:10px;
}
.score-pingjia{
  width: 75%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  justify-content: space-between;
  padding-right:10px;
}
.score-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%;
  margin-left: 30rpx;
}
.score-right image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.score_text{
  width: 150rpx;
  text-align: center;
  color: #b0b0b0;
  margin-left: 35rpx;
}
.textarea{
  position: relative;
  margin-top: 20rpx;
  height: 330rpx;
  width: 100%;
  border-bottom: 1rpx #e6e6e6 solid;
}
.textarea-view{
  position: relative;
  height: 180rpx;
  width: 100%;
  border-bottom: 1rpx #e6e6e6 solid;
}
.textarea textarea{
  height: 400rpx;
  width: 100%;
}
.textarea-text{
  color: #b0b0b0;
}
.picture{
  position: absolute;
  z-index: 99;
  bottom: 10rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
}
.picture_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 150rpx;
  width: 150rpx;
  border: 1rpx #e6e6e6 dashed;
}
.picture_item image{
  width: 100rpx;
  height: 100rpx;
}
.picture_upload{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 150rpx;
  width: 150rpx;
 
}
.picture_upload image{
  height: 150rpx;
  width: 150rpx;
}
.picture_delete{
  width: 150rpx;
  height: 50rpx;
  position: absolute;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  bottom:-50rpx;
  right:0rpx;
  border: 1rpx #e6e6e6 solid;
  border-top: none;
 
}
.picture_delete image{
  width: 50rpx;
  height: 50rpx;
}

.weui-btn{
  height: 30px;
  background: #008B8B!important;
  color:#fff!important;
  font-size:12px;
}
