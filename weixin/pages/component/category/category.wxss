@import '../../common/common.wxss';

page, .main {
  height: 100%;
}

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}

.categroy-left .cate-list.on {
  color: #008B8B;
  border-color: #008B8B;
}

.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}

.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.cate-box .cate-banner image {
  display: block;
  width: 100%;
  height: 190rpx;
}

.cate-title {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  color: #008B8B;
  font-size: 28rpx;
}

.cate-title::before {
  position: absolute;
  left: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #008B8B;
}

.cate-title::after {
  position: absolute;
  right: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #008B8B;
}

.product-list {
  display: inline-block;
  width: 240rpx;
  height: 230rpx;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
  background: #f5f6f5;
}

.product-list image {
  width: 180rpx;
  height: 130rpx;
  margin: 20rpx 0 15rpx;
}

.product-list:nth-child(3n) {
  margin-right: 0;
}
